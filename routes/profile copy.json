{
	"title": "Profile @ ORYK",
	"description": "Your profile.",
	"keywords": ["website", "pages", "presence"],
	"_template": {"src": "/nodes/home.html"},
	"_image": {"src": "/nodes/home/spacex-uj3hvdfQujI-unsplash.jpg"},
	"sections": [

		
		
		
		
		
		{
			"id": "status",
			"if": "session.profile._id",
			"template": "/templates/form.html",
			"title": "Status",
			"background": "#f2f2f2",
			"action": "/api/profiles",
			"method": "POST",
			"key": "session.profile",
			"data": {
				
				"uid": {
					"id": "uid",
					"value": "{{session.profile._id}}",
					"type": "hidden"
				},
				
				"access_token": {
					"id": "access_token",
					"value": "{{session.profile.password}}",
					"type": "hidden"
				},
				
				"mode": {
					"id": "mode",
					"title": "Mode",
					"model": "session.profile.mode",
					"type": "select",
					"options": ["Offline", "Online", "Available", "Available (On Demand)", "Unavailable", "Logged Out"]
				},
				
				"state": {
					"id": "state",
					"model": "session.profile.state",
					"title": "State",
					"type": "select",
					"options": ["Idle", "Waiting", "Receiving", "Busy", "Away", "Lunch", "Break", "Wrap-up"]
				},
				
				"memo": {
					"id": "memo",
					"model": "session.profile.memo",
					"title": "Memo",
					"type": "text"
				},
				
				"incognito": {
					"id": "incognito",
					"model": "session.profile.incognito",
					"title": "Incognito",
					"type": "boolean"
				}
				
			}
		}
		
		
		
		
		
		, {
			"id": "profile",
			"if": "session.profile._id",
			"template": "/templates/form.html",
			"title": "Profile",
			"background": "#ffffff",
			"action": "/api/profiles",
			"method": "POST",
			"key": "session.profile",
			"data": {
				
				"uid": {
					"id": "uid",
					"value": "{{session.profile._id}}",
					"type": "hidden"
				},
				
				"access_token": {
					"id": "access_token",
					"value": "{{session.profile.password}}",
					"type": "hidden"
				},
				
				"title": {
					"id": "title",
					"title": "Name",
					"model": "session.profile.title",
					"type": "text"
				}
				
			}
		}
		
		

		
		
		, {
			"id": "security",
			"if": "session.profile._id",
			"template": "/templates/form.html",
			"title": "Security",
			"background": "#f2f2f2",
			"action": "/api/profiles",
			"method": "POST",
			"key": "session.profile",
			"reset": true,
			"data": {
				
				"uid": {
					"id": "uid",
					"value": "{{session.profile._id}}",
					"type": "hidden"
				},
				
				"access_token": {
					"id": "access_token",
					"value": "{{session.profile.password}}",
					"type": "hidden"
				},
				
				"password": {
					"id": "password",
					"title": "Password",
					"_model": "session.profile.password",
					"type": "text",
					"required": true,
					"minlength": 10,
					"help": "* Will also change your access token."
				}
				
			}
		}
		
		
		
		
		
		
		, {
			"id": "api",
			"if": "session.profile._id",
			"title": "API",
			"template": "/templates/list.html",
			"data": [
				{
					"title": "<b>External Username: </b>{{session.profile._id}}@oryk.com"
				},
				{
					"title": "<b>Access Token/External Password: </b>{{session.profile.password}}"
				}
			]
		}	
		
		
		
		, {
			"id": "access",
			"template": "/templates/access.html",
			"background": "#ffffff"
		}
		
		

	]
}