{
	"title": "Account / Security",
	"sections": [
		
		{
			"template": "/templates/breadcrumbs.html"
		},
		
		{
			"id": "security",
			"if": "session.profile._id",
			"template": "/templates/form.html",
			"title": "Security",
			"background": "#f2f2f2",
			"action": "/api/profiles",
			"method": "POST",
			"key": "session.profile",
			"reset": true,
			"confirm": true,
			"data": {
				
				"uid": {
					"id": "uid",
					"value": "{{session.profile._id}}",
					"type": "hidden"
				},
				
				"access_token": {
					"id": "access_token",
					"value": "{{session.profile.password}}",
					"type": "hidden"
				},
				
				"password": {
					"id": "password",
					"title": "Password",
					"_model": "session.profile.password",
					"type": "text",
					"required": true,
					"minlength": 10,
					"help": "* Will also change your access token."
				}
				
			}
		}

		
		
		
		, {
			"id": "api",
			"if": "session.profile._id",
			"title": "API",
			"template": "/templates/list.html",
			"data": [
				{
					"title": "<b>External Username: </b>{{session.profile._id}}@oryk.com"
				},
				{
					"title": "<b>Access Token/External Password: </b>{{session.profile.password}}"
				}
			]
		}	

	]
}